<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameover"
    tools:context=".GameOverActivity">


    <Button
        android:id="@+id/play_again_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="#C5811B"
        android:fontFamily="@font/coiny"
        android:padding="10dp"
        android:text="Play Again"
        android:textAllCaps="false"
        android:textColor="#050505"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/displayScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_again_btn"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/galindo"
        android:text="Your score:"
        android:textAlignment="center"
        android:textColor="#FF1C0B"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>